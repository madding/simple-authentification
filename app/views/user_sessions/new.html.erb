<%= form_tag user_sessions_path, method: :post, class: 'form-signin' do %>
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

  <%= label_tag :email, 'Email address', class: 'sr-only' %>
  <%= text_field_tag :email, nil,
                     class: 'form-control',
                     placeholder: 'Email address',
                     type: :email,
                     required: true,
                     autofocus: true %>

  <%= label_tag :password, 'Password', class: 'sr-only' %>
  <%= text_field_tag :password, nil,
                     class: 'form-control',
                     placeholder: 'Password',
                     type: :password,
                     required: true %>

  <%= submit_tag 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
